<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="mopa_bootstrap.twig.extension.form.class">Mopa\Bundle\BootstrapBundle\Twig\FormExtension</parameter>
        <parameter key="mopa_bootstrap.twig.extension.icon.class">Mopa\Bundle\BootstrapBundle\Twig\IconExtension</parameter>
        <parameter key="mopa_bootstrap.twig.extension.menu.class">Mopa\Bundle\BootstrapBundle\Twig\MenuExtension</parameter>
        <parameter key="mopa_bootstrap.menu.extension.class">Mopa\Bundle\BootstrapBundle\Menu\Factory\MenuExtension</parameter>
    </parameters>

    <services>
        <service id="mopa_bootstrap.twig.extension.bootstrap_form" class="%mopa_bootstrap.twig.extension.form.class%">
            <tag name="twig.extension" />
        </service>

        <service id="mopa_bootstrap.twig.extension.bootstrap_icon" class="%mopa_bootstrap.twig.extension.icon.class%">
            <argument>%mopa_bootstrap.icons.icon_set%</argument>
            <argument>%mopa_bootstrap.icons.shortcut%</argument>
            <tag name="twig.extension" />
        </service>

        <service id="mopa_bootstrap.twig.extension.menu" class="%mopa_bootstrap.twig.extension.menu.class%">
            <argument type="service" id="knp_menu.helper" />
            <argument>%mopa_bootstrap.menu.template%</argument>
            <tag name="twig.extension" />
        </service>

        <service id="mopa_bootstrap.menu.extension" class="%mopa_bootstrap.menu.extension.class%">
            <tag name="knp_menu.factory_extension" priority="-100" />
        </service>
    </services>
</container>
